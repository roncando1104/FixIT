<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.alliancecode.fixit.TaskReceiver">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar">

    </include>

    <com.baoyachi.stepview.HorizontalStepView
        android:layout_width="match_parent"
        android:layout_below="@+id/app_bar"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalStepView">

    </com.baoyachi.stepview.HorizontalStepView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:id="@+id/LO2"
        android:layout_below="@+id/horizontalStepView"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Summary"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAlignment="center"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"/>
            <View
                android:layout_width="350dp"
                android:layout_height="3dp"
                android:background="@color/brown"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/LO2"
        android:layout_marginBottom="50dp"
        android:id="@+id/LO1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="340sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:background="@drawable/round_corner_white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected Service:"
                        android:fontFamily="@font/nunito"
                        android:textColor="#000000"
                        android:id="@+id/task"
                        android:layout_marginLeft="10sp"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:fontFamily="@font/nunito"
                        android:id="@+id/selectedService"
                        android:layout_marginLeft="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Detailed Services:"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="House Type "
                        android:fontFamily="@font/nunito"
                        android:gravity="left"
                        android:textColor="#000000"
                        android:id="@+id/houseType"
                        android:layout_marginLeft="0sp"
                        android:textSize="15sp"/>
                    <!--<TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:text=" .............................. "
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="15sp"/>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textColor="#000000"
                        android:id="@+id/houseTypeAmount"
                        android:gravity="right"
                        android:fontFamily="@font/nunito"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 1 "
                        android:fontFamily="@font/nunito"
                        android:id="@+id/task1"
                        android:textColor="#000000"
                        android:layout_marginLeft="0sp"
                        android:textSize="15sp"/>
                    <!--<TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:text=" .............................. "
                        android:textColor="#000000"
                        android:id="@+id/dot1"
                        android:gravity="center"
                        android:textSize="15sp"/>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Amount"
                        android:textColor="#000000"
                        android:id="@+id/item1Amount"
                        android:gravity="right"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 2 "
                        android:fontFamily="@font/nunito"
                        android:id="@+id/task2"
                        android:textColor="#000000"
                        android:layout_marginLeft="0sp"
                        android:textSize="15sp"/>
                    <!--<TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:text=" .............................. "
                        android:gravity="center"
                        android:textColor="#000000"
                        android:id="@+id/dot2"
                        android:textSize="15sp"/>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:fontFamily="@font/nunito"
                        android:textColor="#000000"
                        android:id="@+id/item2Amount"
                        android:gravity="right"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:layout_height="wrap_content"
                        android:text="Item 3"
                        android:id="@+id/task3"
                        android:textColor="#000000"
                        android:layout_marginLeft="0sp"
                        android:textSize="15sp"/>
                    <!--<TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:text=" .............................. "
                        android:textColor="#000000"
                        android:id="@+id/dot3"
                        android:gravity="center"
                        android:textSize="15sp"/>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textColor="#000000"
                        android:fontFamily="@font/nunito"
                        android:id="@+id/item3Amount"
                        android:gravity="right"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 4"
                        android:fontFamily="@font/nunito"
                        android:id="@+id/task4"
                        android:textColor="#000000"
                        android:layout_marginLeft="0sp"
                        android:textSize="15sp"/>
                    <!--<TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:text=" .............................. "
                        android:textColor="#000000"
                        android:id="@+id/dot4"
                        android:gravity="center"
                        android:textSize="15sp"/>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:fontFamily="@font/nunito"
                        android:textColor="#000000"
                        android:id="@+id/item4Amount"
                        android:gravity="right"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 5"
                        android:fontFamily="@font/nunito"
                        android:id="@+id/task5"
                        android:textColor="#000000"
                        android:textSize="15sp"/>
                    <!--<TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:text=" .............................. "
                        android:textColor="#000000"
                        android:id="@+id/dot5"
                        android:gravity="center"
                        android:textSize="15sp"/>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:fontFamily="@font/nunito"
                        android:textColor="#000000"
                        android:id="@+id/item5Amount"
                        android:gravity="right"
                        android:textSize="15sp"/>
                </LinearLayout>

                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:background="@color/brown"
                    android:layout_marginTop="5sp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: "
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/brown"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:layout_marginRight="0sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="totalAmount"
                        android:fontFamily="@font/nunito"
                        android:id="@+id/totalAmount"
                        android:textColor="@color/brown"
                        android:textSize="20sp"
                        android:gravity="right"
                        android:layout_marginRight="0sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="340sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp"
                android:elevation="3dp"
                android:background="@drawable/round_corner_white"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule: "
                        android:fontFamily="@font/nunito"
                        android:textColor="#000000"
                        android:gravity="left"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:fontFamily="@font/nunito"
                        android:textColor="#000000"
                        android:layout_marginLeft="20sp"
                        android:id="@+id/date"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:fontFamily="@font/nunito"
                        android:layout_marginLeft="10sp"
                        android:textColor="#000000"
                        android:id="@+id/time"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: "
                        android:fontFamily="@font/nunito"
                        android:textColor="#000000"
                        android:gravity="left"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:fontFamily="@font/nunito"
                        android:textColor="#000000"
                        android:id="@+id/address"
                        android:maxLines="3"
                        android:autoSizeMaxTextSize="30sp"
                        android:layout_marginLeft="25sp"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="340sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/round_corner_white"
                android:layout_marginTop="10sp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:padding="5dp"
                android:elevation="3dp"
                android:layout_marginBottom="10sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Note:"
                    android:layout_marginLeft="10sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunito"
                    android:id="@+id/noteTitle"/>
                <EditText
                    android:layout_width="320sp"
                    android:layout_height="wrap_content"
                    android:hint="Your note..."
                    android:maxLength="50"
                    android:padding="3dp"
                    android:background="@drawable/comment_box"
                    android:textSize="15sp"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:layout_gravity="center"
                    android:maxLines="3"
                    android:textColor="#000000"
                    android:textStyle="italic"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="0sp"
                    android:id="@+id/tvNote"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="340sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:background="@drawable/round_corner_white">
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="NOTE"
                    android:id="@+id/ConsumerNote"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <!--next linear layout in here if needed-->
        </LinearLayout>

    </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="CONFIRM TASK"
            android:layout_gravity="bottom"
            android:id="@+id/btnConfirmTask"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent"/>
    </LinearLayout>


</RelativeLayout>
