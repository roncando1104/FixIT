<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrangeFixit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCOUNT BLOCKED ALERT!"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your account is one cancellation away "
            android:textColor="@color/colorBlack"
            android:textSize="15dp"

            android:fontFamily="@font/nunito"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to be blocked for using this app."
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:paddingBottom="5dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please make a complete and "
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="successful service request booking."
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito"
            android:gravity="center"/>

    </LinearLayout>


</RelativeLayout>


