<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrangeFixit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL IS NOT VERIFIED !"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:gravity="center"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please verify your email."
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:fontFamily="@font/nunito"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go to your email and "
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:fontFamily="@font/nunito"
                android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="click the sent verification link."
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOTE: "
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:fontFamily="@font/nunito"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can't able to book a service "
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nunito"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="until your email is verified."
            android:layout_marginLeft="55dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nunito"/>
    </LinearLayout>



</RelativeLayout>


